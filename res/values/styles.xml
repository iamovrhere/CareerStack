<resources xmlns:android="http://schemas.android.com/apk/res/android"
    	  xmlns:tools="http://schemas.android.com/tools" 
    	  xmlns:careerstack="http://schemas.android.com/apk/res-auto" 
    	  >
    
    <!--
       Dark theme
    -->
    <style name="_AppBaseTheme.Dark" parent="Theme.AppCompat"
         >
         <item name="android:colorBackgroundCacheHint">?android:windowBackground</item>
        <item name="careerstack_title_color">@android:color/white</item>
        <!-- Attribue drawable for the dark icon -->
        <item name="ic_careerstack" >@drawable/ic_careerstack_dark</item>
        
    
        <!-- The colour of the x miles/km text -->
   		<item name="careerstack_distance_color" >@color/careerstack_translucent_grey</item>
   		
   		<!-- Assume black for dark theme -->
        <item name="careerstack_searchbar_color">@android:color/black</item>
        <!-- Orange -->
   		<item name="careerstack_searchbar_border">@drawable/careerstack_ab_transparent_strip</item>
   		
   		<!-- Set actionbar -->
   		<item name="android:actionBarStyle" tools:targetApi="11">@style/MyDarkActionBar</item>
		
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyDarkActionBar</item>
    </style>
    
    <!-- Light theme -->
    <style name="_AppBaseTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar"
        >
        <item name="android:windowBackground">@color/careerstack_offwhite_background</item>        
        <item name="careerstack_title_color">@android:color/black</item>        
        <item name="android:colorBackgroundCacheHint">?android:windowBackground</item>
        
        <!-- Attribue drawable for the light icon -->
        <item name="ic_careerstack" >@drawable/ic_careerstack_light</item>        
        
        <!-- Assume grey for light theme -->
        <item name="careerstack_searchbar_color">@color/careerstack_actionBar_light</item>
        
        <item name="careerstack_searchbar_border">@null</item>
        
        <!-- The colour of the x miles/km text -->
   		<item name="careerstack_distance_color" >@color/careerstack_translucent_grey</item>
   		
   		<!-- Set actionbar -->
   		<item name="android:actionBarStyle" tools:targetApi="11">@style/MyLightActionBar</item>
		
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyLightActionBar</item>
    </style>
    
    
     <!-- General styles for the dark action bar -->
    <style name="MyDarkActionBar"
           parent="@style/Widget.AppCompat.ActionBar">
        <!-- The orange strip -->
        <item name="android:background">@drawable/careerstack_ab_transparent_strip</item>
 		
        <!-- Support library compatibility -->
        <item name="background">@drawable/careerstack_ab_transparent_strip</item>
    </style>
    
    <!-- General styles for the light action bar -->
    <style name="MyLightActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/careerstack_actionBar_light</item>
 		
        <!-- Support library compatibility -->
        <item name="background">@color/careerstack_actionBar_light</item>
    </style>
    
    <!-- The styling for the search bar; ensures it is always full -->
    <style name="SearchBarDialogStyle"   >
        <!-- These ensure there is no border -->
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowFullscreen">true</item>
	    <item name="android:windowIsFloating">true</item>
	    
	</style>
	
	
    <!-- Search box style for dark;  ensures it always matches the actionbar -->
    <style name="SearchBarDialogStyle.Dark" parent="Theme.AppCompat" >
	    <item name="android:editTextStyle">@style/EditTextAppBaseTheme_Dark</item>	
	    <item name="android:textColorHighlight">#9933b5e5</item>	
	    <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppBaseTheme_Dark</item>	
	    <item name="android:checkboxStyle">@style/CheckBoxAppBaseTheme_Dark</item>	
	    <item name="android:buttonStyle">@style/ButtonAppBaseTheme_Dark</item>	
	    <item name="android:imageButtonStyle">@style/ImageButtonAppBaseTheme_Dark</item>	
	    <item name="android:seekBarStyle">@style/SeekBarAppBaseTheme_Dark</item>	
	    <item name="android:listViewStyle">@style/ListViewAppBaseTheme_Dark</item>	
	    <item name="android:listViewWhiteStyle">@style/ListViewAppBaseTheme_Dark.White</item>	
	    <item name="android:spinnerItemStyle">@style/SpinnerItemAppBaseTheme_Dark</item>
	    
	    <!--  Ensure the background is the correct colour -->
	    <item name="android:windowBackground">?attr/careerstack_searchbar_color</item>
	    

	    <!--  Hide actionbar completely in dialog WHILE showing the copy/paste
	    action bar menu, pushing down when needed. It is nice. -->
	    <item name="android:windowActionBar" tools:targetApi="11">false</item>
	    <item name="android:windowTitleSize" >0dp</item>
		
        <!-- Support library compatibility -->
        <item name="windowActionBar" >false</item>
  	</style>
  	
    
    
    <!-- The animation for the dialog.  -->
    <style name="SearchBarAnimation">
		<item name="android:windowEnterAnimation">@anim/slide_in_down</item>
		<item name="android:windowExitAnimation">@anim/slide_out_up</item>
	</style>
    
    
    <!-- Dialog theme fix for 2.3.3 -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:seekBarStyle">@style/SeekBarAppBaseTheme_Dark</item>
        <!-- The colour of the x miles/km text -->
        <item  name="careerstack_distance_color" >@android:color/primary_text_dark</item>
	</style>


</resources>
