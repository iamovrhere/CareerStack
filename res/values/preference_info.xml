<resources>
    <!-- Version 0.5.0  -->
    <eat-comment />
    <!-- The string used as the preference file name. -->
    <string name="careerstack_PREFERENCE_FILE_KEY" >
        com_ovrhere_careerstack_PREFERENCE_FILE_KEY
    </string>
    
    <!-- Preference keys:
	BE WARY OF CHANGING KEY VALUES HERE.  -->
	<eat-comment />
	
    <!-- Boolean key. Whether to use metric on the distance.  -->
    <string name="careerstack_pref_KEY_USE_MILES" >
        careerstack_pref_KEY_USE_MILES
    </string>
    <!-- Boolean key. Whether to keep search settings like 
    distance, remote, offers relocation.  -->
    <string name="careerstack_pref_KEY_KEEP_SEARCH_SETTINGS" >
        careerstack_pref_KEY_KEEP_SEARCH_SETTINGS
    </string>
    
     <!-- Boolean key. The ability to switch themes quickly.  -->
    <string name="careerstack_pref_KEY_QUICK_THEME_SWITCH" >
        careerstack_pref_KEY_QUICK_THEME_SWITCH
    </string>
    
    <!-- Start search settings -->
    <eat-comment />
    
     <!-- Boolean key. Whether remote is offered  -->
    <string name="careerstack_pref_KEY_REMOTE_ALLOWED" >
        careerstack_pref_KEY_REMOTE_ALLOWED
    </string>
     <!-- Boolean key. Whether relocation is offered  -->
    <string name="careerstack_pref_KEY_RELOCATION_OFFERED" >
        careerstack_pref_KEY_RELOCATION_OFFERED
    </string>
    
    <!-- Int key. The distance input.  -->
    <string name="careerstack_pref_KEY_DISTANCE_VALUE" >
        careerstack_pref_KEY_DISTANCE_VALUE
    </string>
    
     <!-- String key. The prefered theme; either 
     careerstack_pref_VALUE_THEME_DARK or careerstack_pref_VALUE_THEME_LIGHT.  -->
    <string name="careerstack_pref_KEY_THEME_PREF" >
        careerstack_pref_KEY_THEME_PREF
    </string>
    
     <!-- String key. The last keywords entered.  -->
    <string name="careerstack_pref_KEY_KEYWORDS_VALUE" >
        careerstack_pref_KEY_KEYWORDS_VALUE
    </string>
     <!-- String key. The last location entered.  -->
    <string name="careerstack_pref_KEY_LOCATION_VALUE" >
        careerstack_pref_KEY_LOCATION_VALUE
    </string>
    
     <!-- Boolean key. Whehter or not to allows ads + additional features.  -->
    <string name="careerstack_pref_KEY_ADS_AND_FEATURES" >
        careerstack_pref_KEY_ADS_AND_FEATURES
    </string>    
    
    
    
    
    
    <!-- Potential values. -->
    <eat-comment />
    <!-- Value to careerstack_pref_KEY_THEME_PREF -->
	<string name="careerstack_pref_VALUE_THEME_DARK"
	    >careerstack_pref_VALUE_THEME_DARK</string>
	<!-- Default Value for careerstack_pref_KEY_THEME_PREF -->
	<string name="careerstack_pref_VALUE_THEME_LIGHT"
	    >careerstack_pref_VALUE_THEME_LIGHT</string>
    
	
	
	
    <!-- Preference Default Values. Some of these may change according to locale.  -->
	<eat-comment />
	<!-- Default Value to careerstack_pref_KEY_USE_MILES -->
	<item name="careerstack_pref_DEF_VALUE_USE_MILES"
	    type="bool">1</item>
	<!-- Default Value to careerstack_pref_KEY_KEEP_SEARCH_SETTINGS -->
	<item name="careerstack_pref_DEF_VALUE_KEEP_SEARCH_SETTINGS"
	    type="bool">1</item>
	
	<!-- Default Value to careerstack_pref_KEY_QUICK_THEME_SWITCH -->
	<item name="careerstack_pref_DEF_VALUE_QUICK_THEME_SWITCH"
	    type="bool">0</item>
	
	
	<!-- Default Value to careerstack_pref_KEY_USE_METRIC -->
	<item name="careerstack_pref_DEF_VALUE_REMOTE_ALLOWED"
	    type="bool">0</item>
	<!-- Default Value to careerstack_pref_KEY_USE_METRIC -->
	<item name="careerstack_pref_DEF_VALUE_RELOCATION_OFFERED"
	    type="bool">0</item>
	
	<!-- Default Value to careerstack_pref_KEY_USE_METRIC -->
	<item name="careerstack_pref_DEF_VALUE_DISTANCE_VALUE"
	    type="integer">@integer/careerstack_seekBar_default</item>
	<!-- Default value for careerstack_pref_KEY_THEME_PREF -->
	<string name="careerstack_pref_DEF_VALUE_THEME_PREF"
	    >@string/careerstack_pref_VALUE_THEME_DARK</string>
	
	
	 <!-- Default value for careerstack_pref_KEY_ADS_AND_FEATURES -->
    <item name="careerstack_pref_DEF_VALUE_ADS_AND_FEATURES" 
         type="bool">1</item>  
	
</resources>
