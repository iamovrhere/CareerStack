<resources>
    <!-- Defines the limits of certain elements -->
    <eat-comment />
    <!--  The upper limit to the seek bar -->
    <item name="careerstack_seekBar_max" type="integer" >500</item>
    <!--  The lower limit to the seek bar -->
    <item name="careerstack_seekBar_min" type="integer" >10</item>
    <!--  The step values for the seek bar -->
    <item name="careerstack_seekBar_step" type="integer" >10</item>
    <!-- The default values for the seekbar -->
    <item name="careerstack_seekBar_default" type="integer">20</item>
    
    <!-- The speed of the search bar animation in milliseconds -->
    <item name="careerstack_searchBar_speed" type="integer">220</item>
    
    <!-- The speed of the quick-fade in/out animation in milliseconds -->
    <item name="careerstack_quickfade_speed" type="integer">200</item>
    
    <!-- The delay between tags and job description, if tags are enabled  -->
    <item name="careerstack_jobdescription_delay" type="integer">120</item>
    
    
    <!-- The minimum size required before showing ads -->
    <item name="careerstack_listview_ad_minSize" type="integer">5</item>
    <!-- Zero-indexed row where the first ad will be shown in list view. -->
    <item name="careerstack_listview_ad_start" type="integer">3</item>
    <!-- Frequency of ads in list view. -->
    <item name="careerstack_listview_ad_frequency" type="integer">20</item>
</resources>
