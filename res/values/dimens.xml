<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_vertical_margin">16dp</dimen>
    <!-- The dialog margins -->
    <dimen name="dialog_margins">10dp</dimen>
    
    <!-- The search bar margins -->
    <dimen name="searchbar_horizontal_margin">12dp</dimen>
    <!-- The search bar margins -->
    <dimen name="searchbar_vertical_margin">10dp</dimen>
    
    <!-- Search frag screen margins -->
    <dimen name="frag_search_horizontal_margin">9dp</dimen>
    
    <!-- Search frag screen margins -->
    <dimen name="row_list_horizontal_padding">12dp</dimen>
    
    
    
    <!-- Sizes for main frag -->
    <eat-comment />
    <!-- The maximum allowed width for the text input.  This will allow 
    match_parent on smaller screens and 600dp on larger ones. -->
    <style name="careerstack_main_text_width">
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <!-- Logo margin top -->
    <dimen name="careerstack_main_logo_marginTop">25dp</dimen>
    <!-- Powered by margin top -->
    <dimen name="careerstack_main_poweredBy_marginTop">5dp</dimen>
    <!-- Powered by margin bottom -->
    <dimen name="careerstack_main_poweredBy_marginBottom">30dp</dimen>
    
    <!-- Margin between text inputs.-->
    <dimen name="careerstack_main_text_marginTop">14dp</dimen>
    <!-- Inter-view top margin -->
    <dimen name="careerstack_main_interView_marginTop">5dp</dimen>
    <!-- Allow remote side margin -->
    <dimen name="careerstack_main_allowRemote_marginLeft">5dp</dimen>    
    <!-- Relocation side margin -->
    <dimen name="careerstack_main_relocate_marginLeft">15dp</dimen>
    
    <!-- Search Margin top margin -->
    <dimen name="careerstack_main_searchButton_marginTop">30dp</dimen>
    
    <!-- Bottom search padding (used for large res) -->
    <dimen name="careerstack_main_offset_marginBottom">20dp</dimen>
    
    <!-- Sizes for Career Item frag -->
    <eat-comment />
    <!-- Inter-Text top margin -->
    <dimen name="careerstack_careeritem_interText_marginTop">5dp</dimen>
    <!-- Buttons top margin -->
    <dimen name="careerstack_careeritem_button_marginTop">10dp</dimen>
    <!-- Buttons bottom margin -->
    <dimen name="careerstack_careeritem_button_marginBottom">10dp</dimen>

</resources>
