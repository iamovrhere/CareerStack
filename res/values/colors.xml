<resources>
    <!-- Based loosely on the colour for Android buttons; ~85% opacity grey. -->
    <color name="careerstack_translucent_grey" >#dc848484</color>
    
    <!-- White color for text; ~90% opacity white. -->
    <color name="careerstack_nearwhite_90" >#E5f0f0f0</color>
    <!-- Black color for text; ~90% opacity black. -->
    <color name="careerstack_nearblack_90" >#E5282828</color>
    
    
    <!-- Very transparent text color -->
    <color name="careerstack_verytranslucent_grey" >#55909090</color>
    
    <!-- App theme specific colors -->
    <eat-comment />
    <color name="appbasetheme_dark_color">#33b5e5</color>    
    <color name="appbasetheme_light_color">#33b5e5</color>
    
    <!-- Standard Material design colors. Easily reference through the app, if needed. 
    Note that some are designated in the attrs.xml -->
	<eat-comment />
	
	<!-- Dark theme material colours -->
	<eat-comment />
    <color name="colorPrimary_darkTheme">#0d0d0d</color>
	<color name="colorPrimaryDark_darkTheme">#080808</color>	
    <!--Colour used for the light theme background-->
    <color name="windowBackground_darkTheme">#141414</color>
    
    <color name="textColorPrimary_darkTheme">#DEDEDE</color>
	<color name="textColorSecondary_darkTheme">#8D8D8D</color>
	
	<!-- Light theme material colours -->
	<eat-comment />
	<color name="colorPrimary_lightTheme">#5c5c5c</color>
	<color name="colorPrimaryDark_lightTheme">#313131</color>	
	<!-- Colour used for the dark theme background -->
	<color name="windowBackground_lightTheme">#F9F9F9</color>	
	
	<color name="textColorPrimary_lightTheme">#212121</color>
	<color name="textColorSecondary_lightTheme">#727272</color>
	
	<!-- Shared material colours -->
	<eat-comment />
	
	<color name="colorControlNormal">@color/careerstack_translucent_grey</color>
	<color name="colorAccent">#fb8c18</color>	
    
</resources>
