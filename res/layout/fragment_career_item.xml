<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/careerstack_careerItem_scrollView"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	>	
	    <TextView
		android:id="@+id/careerstack_careerItem_text_jobTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Really long Job Title title"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="?attr/careerstack_title_color"
		tools:ignore="HardcodedText" />
	    
	    <TextView
		android:id="@+id/careerstack_careerItem_text_companyLocationEtc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/careerstack_careeritem_interText_marginTop"
		android:text="Company Inc, At location!"
		android:textAppearance="?android:attr/textAppearanceMedium" 
		tools:ignore="HardcodedText"
		android:textColor="@color/careerstack_translucent_grey"
		/>
	    
	    <LinearLayout
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="top"
	        >
	    <Button
		android:id="@+id/careerstack_careerItem_button_openLink"
		android:textSize="14sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:text="@string/careerstack_careerItem_button_openLink" />

	    <Button
		android:id="@+id/careerstack_careerItem_button_copyUrl"
		android:textSize="14sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:text="@android:string/copyUrl" />

	    <Button
		android:id="@+id/careerstack_careerItem_button_share"
		android:textSize="14sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:text="@string/careerstack_careerItem_button_shareJob" />
	    </LinearLayout>
		
	    <TextView
		android:id="@+id/careerstack_careerItem_text_updateDate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/careerstack_careeritem_interText_marginTop"
		android:text="@string/careerstack_formatString_publishUpdateDate" 
		android:textSize="14sp"
		android:textColor="@color/careerstack_translucent_grey"
		/>

	    <TextView
		android:id="@+id/careerstack_careerItem_text_jobDescription"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/careerstack_careeritem_interText_marginTop"
		android:text="Description: Willing to program in exchange for currency"
		android:textAppearance="?android:attr/textAppearanceMedium"
		tools:ignore="HardcodedText" />


	</LinearLayout>
</ScrollView>
