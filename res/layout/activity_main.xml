<LinearLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ovrhere.android.careerstack.ui.MainActivity"
    tools:ignore="MergeRootFrame" 
    android:orientation="horizontal"
    android:baselineAligned="false"
    >
	<FrameLayout 
	    android:id="@+id/container"
	    android:layout_width="0dp"
	    android:layout_height="match_parent" 
	    android:layout_weight="@integer/careerstack_container_weight"
    />
	<FrameLayout 
	    android:id="@+id/tablet_container"
	    android:layout_width="0dp"
	    android:layout_height="match_parent" 
	    android:layout_weight="@integer/careerstack_tablet_container_weight"  
	    android:visibility="gone"
	    
	    >
	    <TextView android:id="@+id/careerstack_main_text_job_description_message"
	        
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:text="@string/careerstack_text_noJobDescriptionSelected"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/careerstack_translucent_grey"
		    
		    android:padding="2dp"
		    android:shadowColor="@color/careerstack_verytranslucent_grey"
		    android:shadowDx="1"
		    android:shadowDy="1"
		    android:shadowRadius="0.6"
		    android:gravity="center"
		    android:visibility="gone"
    	/> 
    </FrameLayout>
</LinearLayout>